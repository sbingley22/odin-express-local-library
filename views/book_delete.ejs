<h1><%= title %>: <%= book.title %></h1>

<% if (bookinstances.length) { %>
    <p><strong>Delete the following book instances before attempting to delete this book.</strong></p>

    <div class="margin-left:20px; margin-top:20px">
        <h4>Book Instances</h4>

        <dl>
            <% bookinstances.map( bookinstance => { %>
               <dt>
                <a href="<%= bookinstance.url %>"><%= bookinstance._id %></a>
               </dt> 
            <% }) %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Book?</p>

    <form action="" method="POST">
        <div class="form-group">
            <input type="hidden" id="bookid" class="form-control" name="bookid" required="true" value="<%= book._id %>">
        </div>

        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %>