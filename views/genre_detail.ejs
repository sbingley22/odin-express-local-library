<h1>Genre: <%= genre.name %></h1>

<div class="margin-left:20px;margin-top:20px">
    <h4>Books</h4>
    <dl>
        <% genre_books.map( (book) => { %>
            <dt><a href="<%= book.url %>">
                <%= book.title %>
            </a></dt>
            <dd><%= book.summary %></dd>
        <% }) %>
        <% if (genre_books.length === 0) { %>
            <p>This genre has no books</p>
        <% } %>
    </dl>
</div>